<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/msg_friend_list_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/head_icon_default"
        app:sriv_left_bottom_corner_radius="25dp"
        app:sriv_left_top_corner_radius="25dp"
        app:sriv_oval="true"
        app:sriv_right_bottom_corner_radius="25dp"
        app:sriv_right_top_corner_radius="25dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/msg_friend_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="测试项目"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/msg_friend_list_item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="测试账号"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/msg_friend_list_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text=""
        android:textSize="14sp" />

</LinearLayout>