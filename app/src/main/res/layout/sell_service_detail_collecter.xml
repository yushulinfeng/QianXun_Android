<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/yellow"
        android:orientation="horizontal" >

        <ImageView
            android:background="@color/yellow"
            android:id="@+id/service_detail_collecter_iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/left_arrowhead" />

        <TextView
            android:background="@color/yellow"
            android:id="@+id/service_detail_collecter_tv_allcol"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="所有收藏者"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:typeface="normal" />
        <ImageView
            android:background="@color/yellow"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
    <com.szdd.qianxun.bank.LoadMoreListView
        android:id="@+id/service_detail_collecter_lmListView_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
