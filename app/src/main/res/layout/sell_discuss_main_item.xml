<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/sell_discuss_item_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/head_icon_default"
        app:sriv_left_bottom_corner_radius="20dp"
        app:sriv_left_top_corner_radius="20dp"
        app:sriv_oval="true"
        app:sriv_right_bottom_corner_radius="20dp"
        app:sriv_right_top_corner_radius="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sell_discuss_item_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/sell_discuss_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:text="文本内容"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/sell_discuss_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2016-06-08 00:00"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>
</LinearLayout>