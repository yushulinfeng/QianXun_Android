<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topbar_bg_post"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/order_detail_layout_nouse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_detail_title_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_detail_iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/arrow_left_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/line_nouse"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/order_detail_layout_nouse"
        android:background="@color/line_divider" />

    <ScrollView
        android:id="@+id/sell_order_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_nouse">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_title_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="收入合计： "
                    android:textSize="@dimen/order_detail_textSize_noChange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"
                    android:text="2元"
                    android:textColor="#FF6A6A"
                    android:textSize="@dimen/order_detail_textSize_noChange" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_content_height"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/order_detail_content_height"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_gravity="center_vertical"
                    android:padding="20dp"

                    android:src="@drawable/order_detail_head_icon" />

                <TextView
                    android:id="@+id/order_detail_tv_phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="17865169886"
                    android:textSize="@dimen/order_detail_textSize_noChange" />

                <ImageView
                    android:layout_width="@dimen/order_detail_content_height"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:padding="25dp"
                    android:src="@drawable/arrow_right_black" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/line_divider" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="服务详情"
                android:textColor="#8B8B83"
                android:textSize="@dimen/order_detail_textSize_noChange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_content_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="服务时间:"
                    android:textSize="@dimen/order_detail_textSize_noChange" />

                <TextView
                    android:id="@+id/order_detail_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="2014-03-07 12:04"
                    android:textSize="@dimen/order_detail_textSize_noChange" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/line_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_content_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="购买数量:"
                    android:textSize="@dimen/order_detail_textSize_noChange" />

                <TextView
                    android:id="@+id/order_detail_tv_buy_count"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textSize="@dimen/order_detail_textSize_noChange" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/line_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_content_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="服务方式:"
                    android:textSize="@dimen/order_detail_textSize_noChange" />

                <TextView
                    android:id="@+id/order_detail_tv_way_service"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="线上"
                    android:textSize="@dimen/order_detail_textSize_noChange" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="交易信息"
                android:textColor="#8B8B83"
                android:textSize="@dimen/order_detail_textSize_noChange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_content_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="订单编号:"
                    android:textSize="@dimen/order_detail_textSize_noChange" />

                <TextView
                    android:id="@+id/order_detail_tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="2014050689465131"
                    android:textSize="@dimen/order_detail_textSize_noChange" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/line_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_content_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="下单时间:"
                    android:textSize="@dimen/order_detail_textSize_noChange" />

                <TextView
                    android:id="@+id/order_detail_tv_time_order"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textSize="@dimen/order_detail_textSize_noChange" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/line_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_content_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="付款时间:"
                    android:textSize="@dimen/order_detail_textSize_noChange" />

                <TextView
                    android:id="@+id/order_detail_tv_time_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="线上"
                    android:textSize="@dimen/order_detail_textSize_noChange" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/line_divider" />

            <LinearLayout
                android:id="@+id/order_detail_layout_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_content_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="交易快照:"
                    android:textSize="@dimen/order_detail_textSize_noChange" />

                <TextView
                    android:id="@+id/order_detail_tv_business_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/order_detail_textSize_noChange" />

                <ImageView
                    android:layout_width="@dimen/order_detail_content_height"
                    android:layout_height="@dimen/order_detail_content_height"
                    android:padding="25dp"
                    android:src="@drawable/arrow_right_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_detail_content_height"
                android:background="#ffffff"></LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_detail_content_height"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_detail_btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/shape_order_detail_button"
            android:gravity="center"
            android:text="与买家沟通"
            android:textSize="@dimen/order_detail_textSize_noChange" />

        <Button
            android:id="@+id/order_detail_btn_reject"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_order_detail_button"
            android:text="拒绝"
            android:textSize="@dimen/order_detail_textSize_noChange" />

        <Button
            android:id="@+id/order_detail_btn_receive"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_order_detail_button"
            android:text="接单"
            android:textSize="@dimen/order_detail_textSize_noChange" />
    </LinearLayout>
</RelativeLayout>
