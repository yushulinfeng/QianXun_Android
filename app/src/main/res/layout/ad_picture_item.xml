<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_picture_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/ad_picture_btn_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/mascot_orange2"
            app:sriv_left_top_corner_radius="10dp"
            app:sriv_oval="false"
            app:sriv_right_top_corner_radius="10dp" />

        <TextView
            android:id="@+id/ad_picture_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/ad_background_yellow"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text="图片名称"
            android:textColor="#585858"
            android:textSize="10sp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/ad_picture_item_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mascot_orange"
            app:sriv_border_color="@color/light_gray"
            app:sriv_border_width="5px"
            app:sriv_left_bottom_corner_radius="15dp"
            app:sriv_left_top_corner_radius="15dp"
            app:sriv_oval="true"
            app:sriv_right_bottom_corner_radius="15dp"
            app:sriv_right_top_corner_radius="15dp" />
    </RelativeLayout>
</FrameLayout>