<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/ad_picture_item_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mascot_orange"
            app:sriv_border_color="@color/light_gray"
            app:sriv_border_width="5px"
            app:sriv_left_bottom_corner_radius="20dp"
            app:sriv_left_top_corner_radius="20dp"
            app:sriv_oval="true"
            app:sriv_right_bottom_corner_radius="20dp"
            app:sriv_right_top_corner_radius="20dp" />

        <TextView
            android:id="@+id/ad_picture_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:background="@color/white">

        <com.szdd.qianxun.tools.views.SquareRelativeLayout
            android:id="@+id/layout_Square1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/ad_picture_btn_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:sriv_border_color="@color/light_gray"
                app:sriv_border_width="1px"
                app:sriv_left_bottom_corner_radius="15dp"
                app:sriv_left_top_corner_radius="15dp"
                app:sriv_oval="false"
                app:sriv_right_bottom_corner_radius="15dp"
                app:sriv_right_top_corner_radius="15dp" />
        </com.szdd.qianxun.tools.views.SquareRelativeLayout>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/dialog_divider" />

</LinearLayout>


