<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.szdd.qianxun.tools.views.RoundHeadView
        android:id="@+id/applyer_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher"
        imagecontrol:border_inside_color="@color/msg_head_circle"
        imagecontrol:border_thickness="1dp" />

    <TextView
        android:id="@+id/applyer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/applyer_picture"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/agree"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/agree"
        android:focusable="false" />

</RelativeLayout>