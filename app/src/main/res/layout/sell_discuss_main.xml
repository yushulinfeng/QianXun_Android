<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/start_top" />

    <com.szdd.qianxun.tools.views.xlist.XListView
        android:id="@+id/sell_discuss_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.alibaba.mobileim.ui.common.clipboard.ClipboardEditText
                android:id="@+id/sell_discuss_edit"
                style="@style/aliwx_chatting_detail_input_text_style"
                android:hint=""
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <Button
            android:id="@+id/sell_discuss_btn"
            style="@style/aliwx_chatting_detail_chat_send_style"
            android:layout_marginBottom="2dp"
            android:text="回复" />

    </LinearLayout>
</LinearLayout>