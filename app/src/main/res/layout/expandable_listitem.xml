<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.szdd.qianxun.tools.views.RoundHeadView
                android:id="@+id/roundHeadview_in_expandList"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher"
                imagecontrol:border_inside_color="@color/msg_head_circle"
                imagecontrol:border_thickness="1dp" />

            <TextView
                android:id="@+id/name_post_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/roundHeadview_in_expandList"
                android:text="冷暖自知" />
        </RelativeLayout>

        <TextView
            android:id="@+id/request_drscripe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="帮忙去泉城广场买一个这样的抱枕" />

        <LinearLayout
            android:id="@+id/layout_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/request_picture01"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/request_picture02"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/request_picture03"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/reward_smallicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="酬劳："
                android:textColor="#e68379" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="￥" />

            <TextView
                android:id="@+id/RewardValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="8 " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="￥" />

            <TextView
                android:id="@+id/RewardValue_self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="一本老人与海" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:focusable="false"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_for_btn01"
                android:focusable="false"
                android:padding="5dp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:focusable="false"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_for_btn02"
                android:focusable="false"
                android:padding="5dp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="5dp"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>