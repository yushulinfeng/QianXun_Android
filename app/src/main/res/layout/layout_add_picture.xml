<?xml version="1.0" encoding="utf-8"?>
<com.szdd.qianxun.tools.views.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/id_item_image1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dynamic_add_image"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/id_item_select1"
        android:clickable="false"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/pictures_cancelled"
      />

</com.szdd.qianxun.tools.views.SquareRelativeLayout>