<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_dynamic_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mine_dynamic_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">


        <ImageView
            android:id="@+id/mine_dynamic_iv_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/mine_dynamic_iv_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/mine_dynamic_iv_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:id="@+id/mine_dynamic_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mine_dynamic_layout1"
        android:layout_alignRight="@id/mine_dynamic_layout1"
        android:layout_below="@id/mine_dynamic_layout1"
        android:paddingBottom="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/homepage_text_gray"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/mine_dynamic_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/mine_dynamic_layout1">

        <View
            android:id="@+id/mine_dynamic_line"
            android:layout_width="1px"
            android:layout_height="600dp"
            android:layout_centerInParent="true"
            android:background="@color/homepage_text_gray" />

        <TextView
            android:id="@+id/mine_dynamic_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/mine_dynamic_line"
            android:textColor="@color/homepage_text_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Â·"
            android:textColor="@color/homepage_text_gray"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mine_dynamic_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/mine_dynamic_line"
            android:textColor="@color/homepage_text_gray"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>