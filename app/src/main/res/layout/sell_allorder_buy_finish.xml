<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/allorder_buy_finish_rhv_headview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:sriv_left_bottom_corner_radius="20dp"
            app:sriv_left_top_corner_radius="20dp"
            app:sriv_oval="true"
            app:sriv_right_bottom_corner_radius="20dp"
            app:sriv_right_top_corner_radius="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mascot_orange" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/allorder_buy_finish_rhv_headview"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/allorder_buy_finish_rhv_headview"
            android:text="驻地驻地"
            android:textSize="@dimen/text_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/allorder_buy_finish_tv_nickname"
            android:layout_marginRight="20dp"
            android:text="订单已完成"
            android:textColor="@color/red"
            android:textSize="@dimen/text_large" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/allorder_buy_finish_iv_describe"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/mascot_orange2" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_progect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/allorder_buy_finish_iv_describe"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/allorder_buy_finish_iv_describe"
            android:text="项目："
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_progectcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/allorder_buy_finish_tv_progect"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/allorder_buy_finish_tv_progect"
            android:text="沙丘"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/allorder_buy_finish_tv_progect"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/allorder_buy_finish_iv_describe"
            android:text="价格："
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_pricecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/allorder_buy_finish_tv_price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/allorder_buy_finish_tv_price"
            android:text="22.00元/次"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/allorder_buy_finish_tv_price"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/allorder_buy_finish_iv_describe"
            android:text="数量："
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_numbercontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/allorder_buy_finish_tv_number"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/allorder_buy_finish_tv_number"
            android:text="1次"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/allorder_buy_finish_tv_number"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/allorder_buy_finish_iv_describe"
            android:text="时间："
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_timecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/allorder_buy_finish_tv_time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/allorder_buy_finish_tv_time"
            android:text="2016-03-26 10：56"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/allorder_buy_finish_tv_time"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/allorder_buy_finish_iv_describe"
            android:text="联系方式："
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/allorder_buy_finish_tv_connectcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/allorder_buy_finish_tv_connect"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/allorder_buy_finish_tv_connect"
            android:text="无"
            android:textSize="@dimen/text_large" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/allorder_buy_finish_tv_chargecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="22.00元"
            android:textSize="@dimen/text_large"
            android:textColor="@color/gray"
            />
        <TextView
            android:id="@+id/allorder_buy_finish_tv_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/allorder_buy_finish_tv_chargecontent"
            android:layout_alignTop="@id/allorder_buy_finish_tv_chargecontent"
            android:text="费用合计："
            android:textSize="@dimen/text_large"
            android:textColor="@color/gray"
            />

    </RelativeLayout>


</LinearLayout>