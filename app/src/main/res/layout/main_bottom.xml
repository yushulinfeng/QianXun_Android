                android:textColor="@color/tab_btn_dark"
                android:textSize="@dimen/tab_bottom_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_linear_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_btn_bg_dark"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/tab_iv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:paddingTop="2dp"
                    android:src="@drawable/tab_03_btn_dark" />

                <TextView
                    android:id="@+id/top_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/aliwx_unread_hint"
                    android:gravity="center"
                    android:text="99+"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small" />
            </FrameLayout>

            <TextView
                android:id="@+id/tab_tv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="消息"
                android:textColor="@color/tab_btn_dark"
                android:textSize="@dimen/tab_bottom_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_linear_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_btn_bg_dark"
